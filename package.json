{
  "name": "dc-blog",
  "description": "Mio stile",
  "version": "2.0.0-rc.0",
  "license": "MIT",
  "type": "module",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "author": {
    "name": "Daniele Castiglia",
    "email": "castiglia.daniele@outlook.com"
  },
  "keywords": [
    "ghost",
    "theme",
    "blog",
    "light weight",
    "ghost-theme"
  ],
  "screenshots": {
    "desktop": [],
    "mobile": ""
  },
  "config": {
    "posts_per_page": 10,
    "card_assets": {
      "exclude": [
        "bookmark",
        "gallery"
      ]
    },
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.12",
    "tailwindcss": "^3.4.3"
  },
  "scripts": {
    "tailwind:dev": "tailwindcss -i ./assets/css/input.css -o ./assets/css/tailwind.css --watch"
  }
}
